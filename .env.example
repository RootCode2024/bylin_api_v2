# Laravel Backend Configuration for Nuxt.js SPA Authentication

# App
APP_NAME="Bylin E-commerce API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Frontend
FRONTEND_URL=http://localhost:3000

# Session (Important for SPA auth)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_DOMAIN=localhost
SESSION_SECURE_COOKIE=false

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=bylindb2
DB_USERNAME=postgres
DB_PASSWORD=07390490

# Sanctum (SPA Authentication)
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:3001,127.0.0.1:3000
SESSION_SAME_SITE=lax

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# E-commerce Features
GIFT_CART_ENABLED=true
GIFT_CART_EXPIRATION_DAYS=30
PREORDER_ENABLED=true
PREORDER_AUTO_ENABLE=true
AUTHENTICITY_ENABLED=true

# Payment Gateway (FedaPay)
PAYMENT_GATEWAY=fedapay
PAYMENT_CURRENCY=XOF
PAYMENT_TEST_MODE=true
FEDAPAY_PUBLIC_KEY=
FEDAPAY_SECRET_KEY=
FEDAPAY_WEBHOOK_SECRET=
FEDAPAY_ENVIRONMENT=sandbox

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@bylin.com"
MAIL_FROM_NAME="${APP_NAME}"

# Queue
QUEUE_CONNECTION=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Security & Notifications
NEW_DEVICE_ALERT_ENABLED=true
NEW_LOCATION_ALERT_ENABLED=true
ACTIVITY_LOG_ENABLED=true
